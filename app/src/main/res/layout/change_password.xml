<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Nút Back -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Tiêu đề Hồ Sơ -->
    <TextView
        android:id="@+id/title_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:textColor="@color/brown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Ghi chú về mật khẩu -->
    <TextView
        android:id="@+id/title_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu cần dài ít nhất 6 ký tự"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_profile"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"/>

    <!--mat khau moi-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iput_oldpass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#09111111"
        app:layout_constraintTop_toBottomOf="@id/title_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- mat khau moi -->
        <EditText
            android:id="@+id/old_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Mật khẩu cũ"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingEnd="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- icon eye -->
        <ImageView
            android:id="@+id/icon_oldpass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hide_password"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--mat khau moi-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iput_newpass3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#09111111"
        app:layout_constraintTop_toBottomOf="@id/iput_oldpass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- mat khau moi -->
        <EditText
            android:id="@+id/new_pass3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Mật khẩu mới"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingEnd="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- icon eye -->
        <ImageView
            android:id="@+id/icon_newpass3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hide_password"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--nhap lai mat khau-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iput_newpass4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#09111111"
        app:layout_constraintTop_toBottomOf="@id/iput_newpass3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- nhap lai mat khau -->
        <EditText
            android:id="@+id/new_pass4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Nhập lại mật khẩu mới"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingEnd="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Icon Eye -->
        <ImageView
            android:id="@+id/icon_newpass4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hide_password"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Nút doi mật khẩu -->
    <Button
        android:id="@+id/btn_change"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text= "ĐỔI MẬT KHẨU"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
