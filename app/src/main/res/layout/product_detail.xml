<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_banner"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F5F5F5">
        <!-- Nút quay lại -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_cancel"
            android:contentDescription="Back" />

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/back_button"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/product1" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image"
            android:text="Iced Coffee Latte"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Our dark, rich espresso combined with milk and served over ice."
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Chọn kích thước (S, M, L) -->
        <LinearLayout
            android:id="@+id/size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_description"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="150dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/size_s_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_size_button"
                android:elevation="0dp"
                android:text="S"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/size_m_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_size_button"
                android:elevation="0dp"
                android:text="M"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/size_l_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_size_button"
                android:elevation="0dp"
                android:text="L"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/size_layout"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="$2.25"
            android:textColor="@color/blackgreen"
            android:textSize="35sp"
            android:textStyle="bold" />

        <!-- Cụm tăng giảm số lượng và nút "Buy Now" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <!-- Cụm tăng giảm số lượng (chiếm 30%) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/quantity_decrement"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Decrease quantity" />

                <TextView
                    android:id="@+id/quantity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/quantity_increment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Increase quantity"
                    android:src="@drawable/ic_addtocart" />
            </LinearLayout>

            <!-- Nút "Buy Now" (chiếm 70%) -->
            <Button
                android:id="@+id/buy_now_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_best_seller"
                android:backgroundTint="@color/blackgreen"
                android:text="Thêm vào giỏ"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>