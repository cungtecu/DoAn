<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Icon Thành công -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/oops"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_continue_notification4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView "Thành công!" -->
    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài khoản của bạn đã được xoá!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/success_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- TextView "Mật khẩu của bạn đã được thay đổi." -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TroisH xin chân thành cảm ơn và xin hẹn gặp lại !"
        android:textSize="16sp"
        android:textColor="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/tv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Nút "TIẾP TỤC" -->
    <Button
        android:id="@+id/btn_continue_notification4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="TIẾP TỤC"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
