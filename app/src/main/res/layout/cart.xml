<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDED"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thanh tiêu đề -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- Nút Back -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/back" />

            <!-- Tiêu đề Giỏ Hàng -->
            <TextView
                android:id="@+id/title_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Giỏ Hàng"
                android:textColor="@color/brown"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Nút Xóa Giỏ Hàng (dạng Text) -->
            <TextView
                android:id="@+id/btn_delete_allcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="8dp"
                android:paddingTop="5dp"
                android:paddingEnd="8dp"
                android:paddingBottom="5dp"
                android:text="Xóa Giỏ Hàng"
                android:textColor="@color/dark_red"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </RelativeLayout>

        <!-- Nội dung chi tiết đơn hàng (sử dụng CardView để tạo hiệu ứng nổi) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Line 1 -->
                <TextView
                    android:id="@+id/tv_added_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="added_at"
                    android:textSize="16sp"
                    android:textColor="@color/brown"
                    android:textStyle="bold" />

                <!-- Line 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Danh Sách Sản Phẩm"
                        android:textSize="16sp"
                        android:textColor="@color/brown"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/btn_add_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:text="Thêm Sản Phẩm"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Thêm sản phẩm" />
                </LinearLayout>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tên sản phẩm"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SL"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Giá"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/tv_name_product"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="name_product"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="quantity"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_itemtotalprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="item_price đ"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/btn_delete_product"
                        android:layout_width="18dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/remove" />
                </TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh Toán"
                    android:textSize="16sp"
                    android:textColor="@color/brown"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"/>
                <!-- Line 3 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voucher:"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_voucher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Thêm"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="20dp"/>
                </TableRow>
                <!-- Line 4 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phương thức thanh toán:"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_payment_method_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Thêm"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="20dp"/>
                </TableRow>
                <!-- Line 5 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng tiền:"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="total_price đ"
                        android:textColor="@color/brown"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="20dp"/>
                </TableRow>
                <!-- Line 6 -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drips dự kiến:"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/drips_points"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="point_drips"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:paddingBottom="20dp"/>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <!-- Nút dat hang -->
        <Button
            android:id="@+id/btn_oder_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/background_button"
            android:text="ĐẶT HÀNG"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>