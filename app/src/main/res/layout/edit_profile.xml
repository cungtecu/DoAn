<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sửa Hồ Sơ"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/header_background"
        android:orientation="vertical"
        android:layout_below="@id/header_layout">

        <!-- Profile Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/person"
                android:layout_marginEnd="16dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toEndOf="@id/profile_image"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/drips_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/medal"
                    android:drawablePadding="5dp"
                    android:text="DRIPS:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/drips_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- CardView for Account Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header and Edit Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/general_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông Tin Chung"
                        android:textColor="@color/brown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/save_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Lưu"
                        android:textColor="@color/dark_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <!-- Name -->
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_detail_background"
                    android:padding="8dp"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

                <!-- Gender -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_detail_background"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:hint="Giới tính"
                        android:paddingEnd="40dp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/gender_selector"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/gender"
                        android:padding="5dp"/>
                </RelativeLayout>

                <!-- Birthday -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_detail_background"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/edit_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:hint="Ngày sinh"
                        android:paddingEnd="40dp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/birthday_picker"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/calendar"
                        android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:background="@color/blackgreen">

        <!-- Nút Trang Chủ -->
        <!--        <TextView-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:text="Trang Chủ"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:fontFamily="@font/font_bigger"-->
        <!--            android:textSize="14sp"-->
        <!--            android:gravity="center"-->
        <!--            android:padding="10dp"-->
        <!--            android:clickable="true"-->
        <!--            android:focusable="true"/>-->
        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_home"/>

        <!-- Nút Add To Order (Cao hơn) -->
        <!--        <FrameLayout-->
        <!--            android:id="@+id/addToCartButton"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="70dp"-->
        <!--            android:layout_weight="2"-->
        <!--            android:gravity="center"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:paddingHorizontal="30dp"-->
        <!--            android:paddingVertical="20dp">-->

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cart"
            android:contentDescription="Cart Icon"
            android:scaleType="centerInside"/>
        <!--        </FrameLayout>-->


        <!-- Nút Khác -->
        <!--    <TextView-->
        <!--        android:layout_width="30dp"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_weight="1"-->
        <!--        android:text="Khác"-->
        <!--        android:textColor="@color/white"-->
        <!--        android:fontFamily="@font/font_bigger"-->
        <!--        android:textSize="14sp"-->
        <!--        android:gravity="center"-->
        <!--        android:padding="10dp"-->
        <!--        android:clickable="true"-->
        <!--        android:focusable="true"/>-->
        <ImageView
            android:id="@+id/btn_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_other"/>
    </LinearLayout>
</RelativeLayout>
